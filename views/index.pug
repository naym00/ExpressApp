extends layout

block content
    // container start
    .container.mt-5
        .row
            b
                h2(style='color: rgb(9, 37, 46);') #{statement_1}
        .row
            p #{statement_2}
        // 1st row start
        .row
            b
                h3 #{searching_time}
        // 1st row end

        // 2nd row start
        .row

            // 1st column start
            .col-md-3.border.rounded(style='background-color: #e8ecec;')
                .m-3
                    .row.mt-2(style='margin-left:0px;')
                        i.fas.fa-smog(style='font-size: 250%;')
                    .row(style='margin-left:0px;')
                        h5 December - February
                    .row.mt-1
                        .col-2
                            p High
                        .col-4
                            p#high-1
                                | #{December_February_High}
                                sup o
                                | C
                        .col-2
                            p Low
                        .col-4
                            p#low-1
                                | #{December_February_Low}
                                sup o
                                | C
            // 1st column end

            // 2nd column start
            .col-md-3.border.rounded(style='background-color: #e8ecec;')
                .m-3
                    .row.mt-2(style='margin-left:0px;')
                        i.fas.fa-snowflake(style='font-size: 250%;')
                    .row(style='margin-left:0px;')
                        h5 March - May
                    .row.mt-1
                        .col-2
                            p High
                        .col-4
                            p#high-2
                                | #{March_May_High}
                                sup o
                                | C
                        .col-2
                            p Low
                        .col-4
                            p#low-2
                                | #{March_May_Low}
                                sup o
                                | C
            // 2nd column end

            // 3rd column start
            .col-md-3.border.rounded(style='background-color: #e8ecec;')
                .m-3
                    .row.mt-2(style='margin-left:0px;')
                        i.fas.fa-sun(style='font-size: 250%;')
                    .row(style='margin-left:0px;')
                        h5 June - August
                    .row.mt-1
                        .col-2
                            p High
                        .col-4
                            p#high-3
                                | #{June_August_High}
                                sup o
                                | C
                        .col-2
                            p Low
                        .col-4
                            p#low-3
                                | #{June_August_Low}
                                sup o
                                | C
            // 3rd column end

            // 4th column start
            .col-md-3.border.rounded(style='background-color: #e8ecec;')
                .m-3
                    .row.mt-2(style='margin-left:0px;')
                        i.fas.fa-cloud-showers-heavy(style='font-size: 250%;')
                    .row(style='margin-left:0px;')
                        h5 September - November
                    .row.mt-1
                        .col-2
                            p High
                        .col-4
                            p#high-4
                                | #{September_November_High}
                                sup o
                                | C
                        .col-2
                            p Low
                        .col-4
                            p#low-4
                                | #{September_November_Low}
                                sup o
                                | C
            // 4th column end
        // 2nd row end

        // 3rd row start
        .row
            div(style='margin: auto;')
                button#btn-for-convert.btn.btn-secondary(onclick='c_f()') Convert to Fahrenheit
        // 3rd row end
    // container end